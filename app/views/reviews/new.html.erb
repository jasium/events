
<%=  form_for [@event, @review] do |f| %>

    <fieldset>
      <p>
        <%=  f.label :name %>
        <%=  f.text_field :name %>
      </p>
      <p>
        <%=  f.label :email %>
        <%=  f.text_field :email %>
      </p>
      <p>
        <%=  f.label :comments %>
        <%=  f.text_field :comments %>
      </p>
      <p class="actions">
        <%=  f.submit "Submit" %>
      </p>
    </fieldset>

<% end %>
